# AutoForwardX Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/autoforwardx
NODE_ENV=production

# Telegram API Configuration (Required)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Optional Bot Tokens
DISCORD_BOT_TOKEN=your_discord_bot_token_here
ADMIN_BOT_TOKEN=your_admin_bot_token_here
ADMIN_USER_IDS=123456789,987654321

# Security Configuration
SESSION_SECRET=your_secure_session_secret_here_minimum_32_characters

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/application.log